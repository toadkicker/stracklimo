extends _layouts/parallax

block content
  .row.content-space-one
    .text-center
      h1.title Luxury at every turn
      p.lead From Los Angeles to Hong Kong and everywhere in between, Strack provides you with seamless transportation worldwide. Whether we are transporting one person or 500, we accommodate your needs with the latest luxury driven vehicles, onboard Wi-Fi and complimentary bottled water.
      p
        img.logo(src= baseUrl + "images/ai/logo.svg", alt="Strack Ground Logo", height="75")
  .row.content-block-one
    .col-md-6.col-md-6.col-lg-6.col-sm-6.col-xs-6
      div(style="height: 35rem;margin: 0 -15px; background-size: cover; background-image: url('/images/Lincoln MKS Ext.jpg'); background-position: 50% 50%")
    #carousel-fleet.col-md-6.col-md-6.col-lg-6.col-sm-6.col-xs-6.carousel.slide(data-ride="carousel", style="margin: -15px")
      // Indicators
      ol.carousel-indicators
        li.active(data-target="#carousel-fleet", data-slide-to="0")
        li(data-target="#carousel-fleet", data-slide-to="1")
        li(data-target="#carousel-fleet", data-slide-to="2")
      // Wrapper for slides
      .carousel-inner(role="listbox")
        each item in site.data.fleet
          if item.active
            .item.active
              img(src=item.image.url, alt=item.image.alt, class=item.image.class)
              .carousel-caption !{item.caption}
          else
            .item
              img(src=item.image.url, alt=item.image.alt, width="100%")
              .carousel-caption !{item.caption}
      // Controls
      a.left.carousel-control(href="#carousel-fleet", role="button", data-slide="prev")
        i.fa.fa-chevron-circle-left(aria-hidden="true")
        span.sr-only Previous

      a.right.carousel-control(href="#carousel-fleet", role="button", data-slide="next")
        i.fa.fa-chevron-circle-right(aria-hidden="true")
        span.sr-only Next
