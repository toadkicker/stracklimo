block content
  #hero.hero-space-one.row
    .container
      .col-xs-12.col-sm-4.col-md-6
        h1.title Now
        h1.title You've
        h1.title Arrived.
        .btn-group
          a.btn.btn-strack(href=site.data.urls.reservations) Book your reservation
      #video.hidden-xs.col-sm-8.col-md-6.center-xs.middle-xs
        figure
          button(name="play", data-toggle="modal", data-target="#modal")
        +modal("", "modal")
          iframe(width="480", height="315", src="https://www.youtube.com/embed/JwTU4JS1kso", frameborder="0", allowfullscreen="")
  .hero-block-one
  .row.content-space-one
    .text-center.col-xs-12(style="padding: 4rem")
      .container
        //link to /about
        h1.title Luxury at every turn
        p.lead.white From Los Angeles to Hong Kong and everywhere in between, Strack provides you with seamless transportation worldwide. Whether we are transporting one person or 500, we accommodate your needs with the latest luxury driven vehicles, onboard Wi-Fi and complimentary bottled water.
        p
          img.logo(src= baseUrl + "images/ai/logo.png", alt="Strack Ground Logo", height="75")
  .row.content-block-one.row-centered
    #carousel-fleet.col-xs-12.carousel.slide.col-centered.carousel-fade(data-ride="carousel")
      // Wrapper for slides
      .carousel-inner.text-center(role="listbox")
        each item in site.data.homefleet
          if item.active
            .item.active.text-center
              a(href="/fleet")
                img(src=item.image.url, alt=item.image.alt, class=item.image.class)
              .carousel-caption !{item.caption}
              .book-this
                p.lead !{item.name}
                a.btn.btn-transparent(href=site.data.urls.reservations) Book this ride
          else
            .item.text-center
              a(href="/fleet")
                img(src=item.image.url, alt=item.image.alt)
              .carousel-caption !{item.caption}
              .book-this
                p.lead !{item.name}
                a.btn.btn-transparent(href=site.data.urls.reservations) Book this ride
        ol.carousel-indicators
          each item, index in site.data.homefleet
            li(class="#{item.active ? 'active' : ''}", data-target="#carousel-fleet", data-slide-to="#{index}")
      //a.left.carousel-control(href="#carousel-fleet", role="button", data-slide="prev")
