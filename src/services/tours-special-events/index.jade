extends ../../_layouts/parallax

block config
  - var baseUrl = "../../"
  - var active = "Services"

block content
  div.hero
    img.img-responsive(src='/images/ai/events-hero.png')
  #hero-unit.row.black
    .col-xs-12.text-center
      h1.title Tours and Special Events

  each tour in site.data.tours
    .row.black.border-top.tour
      .col-xs-12
        .container
          .row
            .col-xs-8
              h3.title
                = tour.title
              p.lead(style="padding-bottom: 3rem")
               = tour.description
              a.btn.btn-default(role="button", href="/reservations") Reserve
            .col-xs-4
              .thumbnail
                img.img-responsive(src="#{baseUrl + tour.image.url}", alt="#{tour.title}")
